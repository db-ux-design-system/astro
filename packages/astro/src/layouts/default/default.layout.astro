---
import { HtmlRoot } from '../../components/html-root';
import { getDbUxAstroConfig } from '../../main.ts';

const { headings, frontMatter } = Astro.props as {
	headings: any[];
	frontMatter: any;
};

const { appName } = getDbUxAstroConfig();
const pageTitle = frontMatter?.title
	? `${frontMatter.title} | ${appName}`
	: appName;
---

<HtmlRoot title={pageTitle}>
	<slot />
</HtmlRoot>
