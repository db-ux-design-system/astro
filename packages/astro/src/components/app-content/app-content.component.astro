---
import type { MarkdownHeading } from 'astro';
import { TableOfContents } from './table-of-contents.component';
import type { FrontMatter } from '../../types';
import './app-content.styles.css';

const { headings = [], frontMatter = {} as FrontMatter } = Astro.props as {
  headings: MarkdownHeading[];
  frontMatter: FrontMatter;
};
const toc = headings && headings?.length > 0 && frontMatter.toc !== false;
---

<main class="dba-main">
  {toc && <TableOfContents client:only astro={Astro} headings={headings} />}
  <article class="dba-main-inner">
    <div class="dba-main-content">
      <h1 class="dba-article-heading">{frontMatter.title}</h1>
      <span class="dba-pulse-underline" aria-hidden="true"></span>
      <slot />
    </div>
  </article>
</main>

