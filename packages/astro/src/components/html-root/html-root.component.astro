---
import { HtmlHead } from '../html-head';
import '../../styles.css';
import { AppFooter } from '../app-footer';

const { title } = Astro.props as {
  title: string;
};
---

<html>
  <HtmlHead title={title} />
  <body>
    <slot />
    <AppFooter />
  </body>
</html>

<script>
  import { BuiltinIntl } from '../../services/intl.service';

  BuiltinIntl.setup();
</script>

<style>
  html {
    width: 100svw;
    height: 100svh;
    overflow-x: hidden;
    scroll-padding-top: calc(
      var(--dba-header-height) + var(--dba-content-padding)
    );
  }

  body {
    display: flex;
    flex-direction: column;
  }
</style>
